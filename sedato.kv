#:kivy 1.0.9

<Sedato>:
     BoxLayout:
          orientation: 'vertical'
          AnchorLayout:
               anchor_x: 'center'
               anchor_y: 'center'
               canvas.before:
                    Color:
                         rgba: 0.0588, 0.0941, 0.1647, 1
                    Rectangle:
                         pos: self.pos
                         size: self.size
               GridLayout:
                    cols: 1
                    size_hint: 1, None
                    height: self.minimum_height
                    Label:
                         text: 'Sedato'
                         size_hint: (1, None)
                         font_size: 50
                         halign: 'center'
                         padding: (10, 7)
                         bold: True
                         markup: True
                         size: self.texture_size
                    Label:
                         text: 'Text-to-Audio and Audio-to-Text using AI'
                         size_hint: (1, None)
                         font_name: 'fonts/dank-mono-italic.otf'
                         halign: 'center'
                         padding: (10, 7)
                         color: (0.8863, 0.9098, 0.9412, 1.0)
                         markup: True
                         italic: True
                         size: self.texture_size
                    AnchorLayout:
                         anchor_x: 'center'
                         anchor_y: 'center'
                         size_hint: (1, None)
                         height: 60
                         padding: (0, 0)
                         BoxLayout:
                              orientation: 'horizontal'
                              size_hint: (None, None)
                              padding: (10, 7)
                              size: self.minimum_size
                              MDRaisedButton:
                                   text: "Text to Audio"
                                   markup: True
                                   halign: 'center'
                                   padding: (10, 8)
                                   background_color: (0.2196, 0.7412, 0.9725, 1.0)
                                   size_hint: (None, None)
                                   on_press: root.goTo('text2audio')
                              Label:
                                   text: 'or'
                                   markup: True
                                   halign: 'center'
                                   padding: (10, 7)
                                   size_hint: (None, None)
                                   size: self.texture_size
                              MDRaisedButton:
                                   text: "Audio to Text"
                                   markup: True
                                   halign: 'center'
                                   padding: (10, 8)
                                   background_color: (0.2196, 0.7412, 0.9725, 1.0)
                                   size_hint: (None, None)
                                   on_press: root.goTo('audio2text')


<Audio2Text>:
     BoxLayout:
          orientation: 'vertical'
          canvas.before:
               Color:
                    rgba: 0.0588, 0.0941, 0.1647, 1
               Rectangle:
                    pos: self.pos
                    size: self.size
          BoxLayout:
               orientation: 'horizontal'
               size_hint: (1, None)
               padding: (10, 8)
               size: self.minimum_size
               Label: 
                    text: "Audio2Text"
                    markup: True
                    halign: 'left'
                    valign: 'middle'
                    bold: True
                    padding: (10, 8)
                    size_hint: (1, 1)
                    font_size: 25
                    text_size: self.size
                    size: self.texture_size
               Label: 
                    text: "Model :"
                    markup: True
                    halign: 'left'
                    valign: 'middle'
                    font_name: 'fonts/dank-mono-italic.otf'
                    padding: (10, 8)
                    size_hint: (None, None)
                    size: self.texture_size
               MDRaisedButton:
                    id: audio2text_model_button
                    text: 'openai/whisper-large-v3'
                    markup: True
                    halign: 'center'
                    padding: (10, 8)
                    size_hint: (None, None)
                    on_press: root.select_model()
          AnchorLayout:
               anchor_x: 'center'
               anchor_y: 'center'
               BoxLayout:
                    orientation: 'vertical'
                    size_hint: (None, None)
                    padding: (10, 8)
                    size: self.minimum_size
                    Label:
                         text: "Select an Audio/Video File to Start"
                         markup: True
                         halign: 'left'
                         valign: 'middle'
                         font_name: 'fonts/dank-mono-italic.otf'
                         padding: (10, 8)
                         size_hint: (None, None)
                         size: self.texture_size
                    BoxLayout:
                         orientation: "horizontal"
                         size_hint: (1, None)
                         padding: (10, 8)
                         size: self.minimum_size
                         MDTextButton:
                              text: 'Cancel'
                              markup: True
                              halign: 'center'
                              padding: (10, 8)
                              size_hint: (None, None)
                              color: 1, 1, 1, 1
                              on_press: root.back()
                         MDRaisedButton:
                              id: audio2text_file_button
                              text: 'Click to select a file'
                              markup: True
                              halign: 'center'
                              padding: (10, 8)
                              size_hint: (1, None)
                              on_press: root.select_file()

<Audio2TextProgress>:
     BoxLayout:
          orientation: 'vertical'
          canvas.before:
               Color:
                    rgba: 0.0588, 0.0941, 0.1647, 1
               Rectangle:
                    pos: self.pos
                    size: self.size
          AnchorLayout:
               anchor_x: 'center'
               anchor_y: 'center'
               BoxLayout:
                    orientation: 'vertical'
                    size_hint: (None, None)
                    padding: (10, 8)
                    size: self.minimum_size
                    Label:
                         text: "Converting..."
                         halign: 'center'
                         valign: 'middle'
                         padding: (4, 4)
                         bold: True
                         size_hint: (None, None)
                         size: self.texture_size
                    Label:
                         id: model_name
                         text: ""
                         halign: 'center'
                         valign: 'middle'
                         font_name: 'fonts/dank-mono-italic.otf'
                         padding: (4, 4)
                         size_hint: (None, None)
                         size: self.texture_size
                    Label:
                         id: file_name
                         text: ""
                         halign: 'center'
                         valign: 'middle'
                         font_name: 'fonts/dank-mono-italic.otf'
                         padding: (4, 4)
                         size_hint: (None, None)
                         size: self.texture_size
                    BoxLayout:
                         orientation: 'vertical'
                         size_hint: (1, None)
                         padding: (4, 10)
                         size: self.minimum_size
                         MDProgressBar:
                              id: progress
                              value: 0
                         Label:
                              id: percentage
                              text: "Progressing. (it may take several minutes)"
                              halign: 'left'
                              valign: 'middle'
                              color: 1, 0.5, 0, 1
                              padding: 0, 4
                              size_hint: (None, None)
                              size: self.texture_size
